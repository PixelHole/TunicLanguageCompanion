<UserControl x:Class="TunicGlyphLibrary.Windows.Elements.DefinitionPanelCloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TunicGlyphLibrary.Windows.Elements"
             mc:Ignorable="d"
             Background="Transparent"
             Height="15" Width="15">
    <Grid Name="MainBody" Background="Transparent" MouseEnter="MainBody_OnMouseEnter" MouseLeave="MainBody_OnMouseLeave" 
          MouseUp="MainBody_OnMouseUp">
        <Image Name="highlight" Source="../../Resources/CrossHighlight.png" Stretch="UniformToFill" Visibility="Hidden"></Image>
        <Image Source="../../Resources/Cross.png" Stretch="UniformToFill"></Image>
    </Grid>
</UserControl>
